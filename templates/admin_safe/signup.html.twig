{% extends 'base.html.twig' %}

{% block title %} Inscription {% endblock %}


{% block pageTitle %} S'inscrire {% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row h-75  d-flex justify-content-center">

            {# card #}
            <div class="col-12 d-flex justify-content-center ">

                <div class="card text-white bg-danger m-2" style="max-width: 30rem;">
                    <div class="card-body">

                        {{ form_start(form) }}
                        {{ form_row(form.username, {
                            "attr" : {"placeholder": "Saisir votre nom d'utilisateur"},
                            "label": "Nom d'utilisateur : "
                        }) }}
                        {{ form_row(form.password, {
                            "attr" : {"placeholder": "**************"},
                            "label" : "Mot de passe"
                        }) }}
                        {{ form_row(form.checkPassword, {
                            "attr" : {"placeholder": "**************"},
                            "label" : "Confirmation mot de passe"
                        }) }}

                        <input type="submit" class="btn btn-warning" value="Valider" >

                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>
    </div>


{% endblock %}
